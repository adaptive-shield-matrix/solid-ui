
(shared_config_solid_ui) {
	handle_path /media-b2* {
		rewrite * {path}
		root * /home/david/Coding/adaptive-solid-ui-media
		file_server
		header {
			Routed "astro-media-b2"
			Cache-Control "public, max-age=60, immutable"
		}
	}
}

solid-ui.com, solid-ui.localhost {
	import shared_config_web
	import shared_config_solid_ui
	header {
		Routed "solid-ui"
	}
	reverse_proxy localhost:3031
}

dist.solid-ui.com, dist.solid-ui.localhost {
	import shared_config_web
	import shared_config_solid_ui
	header {
		Routed "solid-ui"
	}
	reverse_proxy localhost:3031
}
